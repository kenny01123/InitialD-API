{
   "compilerOptions": {
      "target":"ES2018",
      "module": "commonjs",
      "allowJs": true,
      "sourceMap": true,
      "strict": false,
      "noImplicitAny": false,
      "moduleResolution": "node",
      "outDir": "./build",
      "esModuleInterop": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "baseUrl": "./src",
      "resolveJsonModule": true
   }
}